{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "lib",
        "module": "es2015",
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./type/@types",
            "./node_modules/@types"
        ],
        "sourceMap": true,
        "jsx": "react"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "lib"
    ]
}